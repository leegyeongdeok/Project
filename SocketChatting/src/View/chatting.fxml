<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TextArea fx:id="txtChat" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <ToolBar prefHeight="40.0" prefWidth="218.0" BorderPane.alignment="CENTER">
         <items>
            <Button fx:id="btnSwitch" mnemonicParsing="false" text="Connection">
               <font>
                  <Font name="Arial Black" size="14.0" />
               </font>
            </Button>
            <Label fx:id="laDepart" alignment="CENTER" prefHeight="32.0" prefWidth="189.0" text="Socket Chatting">
               <font>
                  <Font name="Arial Black" size="20.0" />
               </font>
            </Label>
         </items>
      </ToolBar>
   </top>
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <TextField fx:id="txtSend" prefHeight="36.0" prefWidth="323.0" />
          <Button fx:id="btnSend" mnemonicParsing="false" text="Send">
               <font>
                  <Font name="Arial Black" size="14.0" />
               </font>
            </Button>
        </items>
      </ToolBar>
   </bottom>
</BorderPane>
